    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
    <div class="user-stuff">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-block btn-social btn-local btn-md"><i class= "fa fa-sign-in"></i>Signup</button>
        <a href="/auth/twitter" class="btn btn-block btn-social btn-twitter btn-md"><i class= "fa fa-twitter"></i>Twitter Signup</a>
        <a href="/auth/github" class="btn btn-block btn-social btn-facebook btn-md"><i class= "fa fa-github"></i>Github Signup</a>
        </div>
    </form>

